// Online C compiler to run C program online
#include <stdio.h>
int a;
int b;
char oper;
int main() {
    printf("Scientific Calculator\n");
    printf("Enter first number which will be operated\n");
    scanf("%d",&a);
    printf("Enter other number which will be operated\n");
    scanf("%d",&b);
    printf("Enter the operator\n");
    scanf("%c",&oper);
    if (oper=="+")
    {
        printf("Result is %d",a+b );
    }
    else if(oper=="-")
    {
         printf("Result is %d", a-b );
    }
    else if (oper=="*")
    {
        printf("Result is %d", a*b);
    }
    else if (oper=="/")
    {
        printf("Result is %d", a/b);
    }
    
}

